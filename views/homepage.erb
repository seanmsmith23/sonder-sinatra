    <form action="/create_memorial">
      <button class="home_action_button" id="create_memorial_button">Create Memorial</button>
    </form>
  </article>
  <article class="one_fourth">
    <form action="/memorials/find">
      <button class="home_action_button">Find Memorial</button>
