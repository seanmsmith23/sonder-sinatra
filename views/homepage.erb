<section class="clearfix">
  <article class="full_column">
    <p style="text-align: center; font-size:30px;">Your Memorials</p>

    <% memorials.each do |memorial_hash| %>

      <div class="memorial_display">
        <div class="home_memorial_photo">
          <img id="photo" src="<%= memorial_hash["photo"] %>">
        </div>

        <div>
          <p class="home_memorial_name">
            <a href="/memorial/<%= memorial_hash['id'] %>">
              <%= memorial_hash["name"] %>
            </a>
          <p>
        </div>
      </div>
        <br>

    <% end %>
  </article>
</section>
